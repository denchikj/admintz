@model BillingAdmin.Models.Tarifs_Data

@{
    ViewBag.Title = "Удаление";
}
<div class="white-block">
    <div class="row">
        <div class="col-md-8">
            <h3 class="no-margin no-padding">Вы уверены, что хотите удалить данные?</h3>
        </div>
        <div class="col-md-4 text-right">
            @Html.ActionLink("Отмена", "Details", new { Model.id }, new { @class = "btn btn-orange-tta" })
            <a class="btn btn-grey-tta" href="@Url.Action("Index","Tarifs_Data")">В список данных</a>
        </div>
    </div>
</div>
<div class="line"></div>
<div class="white-block">
    <div class="row">
        <div class="form-group">
            <div class="col-md-3">
                <label>@Html.DisplayNameFor(model => model.value)</label>
            </div>
            <div class="col-md-9 text-left">
                @Html.DisplayFor(model => model.value)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="col-md-3">
                <label>@Html.DisplayNameFor(model => model.count)</label>
            </div>
            <div class="col-md-9 text-left">
                @Html.DisplayFor(model => model.count)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="col-md-3">
                <label>@Html.DisplayNameFor(model => model.Tarifs.name)</label>
            </div>
            <div class="col-md-9 text-left">
                @Html.DisplayFor(model => model.Tarifs.name)
            </div>
        </div>
    </div>
</div>
<div class="line"></div>
<div class="white-block">
    <div class="row">
        <div class="col-md-12 text-right">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <input type="submit" value="Подтвердить удаление" class="btn btn-grey-tta" />
                </div>
            }
        </div>
    </div>
</div>