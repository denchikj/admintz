@model BillingAdmin.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}
<div class="white-block">
    <div class="row">
        <div class="col-md-6">
            <p class="font-small no-padding">Создайте новую учетную запись.</p>
        </div>
        <div class="col-md-6 text-right">
            <a class="btn btn-grey-tta" href="@Url.Action("Login","Account")">Вход под учетной записью</a>
        </div>
    </div>
</div>
<div class="line"></div>
<div class="white-block">
    <div class="row">
        <div class="form-horizontal">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-6">
                        @Html.PasswordFor(model => model.Password, new { @class = "form" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-6">
                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-8 text-right">
                        <input type="submit" value="Регистрация" class="btn btn-orange-tta" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/ScriptsValidate")
}