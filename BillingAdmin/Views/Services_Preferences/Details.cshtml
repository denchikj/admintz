@model BillingAdmin.Models.Services_Preferences

@{
    ViewBag.Title = "Просмотр";
}
<div class="white-block">
    <div class="row">
        <div class="col-md-8">
            <h3 class="no-margin no-padding">@Model.Services.name</h3>
        </div>
        <div class="col-md-4 text-right">
            <a class="btn btn-orange-tta" href="@Url.Action("Edit","Services_Preferences", new { id = Model.id })">Редактировать</a>
            <a class="btn btn-grey-tta" href="@Url.Action("Index","Services_Preferences")">Вернуться к списку</a>
        </div>
    </div>
</div>
<div class="line"></div>
<div class="white-block">
    <div class="row">
        <div class="form-group">
            <div class="col-md-3">
                <label>@Html.DisplayNameFor(model => model.Services.name)</label>
            </div>
            <div class="col-md-9 text-left">
                @Html.DisplayFor(model => model.Services.name)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="col-md-3">
                <label>@Html.DisplayNameFor(model => model.Services_Preferences_HB.name)</label>
            </div>
            <div class="col-md-9 text-left">
                @Html.DisplayFor(model => model.Services_Preferences_HB.name)
            </div>
        </div>
    </div>
</div>
<div class="line"></div>
<div class="white-block">
    <div class="row">
        <div class="col-md-12 text-right">
            <p>
                <a class="btn btn-grey-tta" href="@Url.Action("Delete","Services_Preferences", new { id = Model.id })">Удалить</a>
            </p>
        </div>
    </div>
</div>