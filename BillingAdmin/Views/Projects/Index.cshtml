@model IEnumerable<BillingAdmin.Models.ProjectsView.ProjectsIndexViewModel>
@{
    ViewBag.Title = "Проекты";
}

<div class="white-block">
    <div class="row">
        <div class="col-md-8">
            <h3 class="no-margin no-padding">Проекты</h3>
        </div>
    </div>
</div>
<div class="line"></div>
<div class="white-block">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OktelCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TypeProject)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreateDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastEditDate)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr onclick="console.log(window.location.href = '@Url.Action("Details","Projects",new { id = item.Id })')" class="tr-clickable">
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OktelCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TypeProject)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastEditDate)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>