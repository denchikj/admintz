@model BillingAdmin.Models.ProjectsView.ServiceViewModel
@{
}
<div id="CreateService" class="modal fade" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Добавление услуги</h4>
            </div>
            <div class="modal-body">
                <form id="AddService" method="post" action="@Url.Action("AddService","Projects")">
                    <div class="row">
                        <label class="control-label col-md-3 text-left" for="ListServices"> Список услуг</label>
                        <div class="col-md-9">
                            <input type="hidden" name="ProjectId" value="@Model.ProjectId" />
                            <select class="form" id="selectService" name="ServiceId">
                                @foreach (var item in Model.Services)
                                {
                                    <option id="@item.Key" value="@item.Key">@item.Value</option>
                                }
                            </select>
                        </div>
                    </div>
                    <br />
                    <div id="preferenceService">
                        <div class="row">

                        </div>
                    </div>
                    <br />
                    <div class="line"></div>
                    <div class="row">
                        <div class="col-md-12 text-right">
                            <input class="btn btn-grey-tta" type="button" data-dismiss="modal" value="Отменить" />
                            <input class="btn btn-orange-tta btn-margin-tta" type="submit" id="btnCreateService" value="Добавить" />
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>