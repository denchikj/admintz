@model BillingAdmin.Models.Services
@{
    ViewBag.Title = "Удаление услуги - " + Model.name;
}
<div class="white-block">
    <div class="row">
        <div class="col-md-8">
            <h3 class="no-margin no-padding">Вы уверены, что хотите удалить услугу?</h3>
        </div>
        <div class="col-md-4 text-right">
            <a class="btn btn-orange-tta" href="@Url.Action("Details","Services",new { Model.id })">Отмена</a>
            <a class="btn btn-grey-tta" href="@Url.Action("Index","Services")">В список услуг</a>
        </div>
    </div>
</div>
<div class="line"></div>
<div class="white-block">
    <div class="row">
        <div class="form-group">
            <div class="col-md-3">
                <label>@Html.DisplayNameFor(model => model.name)</label>
            </div>
            <div class="col-md-9 text-left">
                @Html.DisplayFor(model => model.name)
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <div class="col-md-3">
                <label>@Html.DisplayNameFor(model => model.description)</label>
            </div>
            <div class="col-md-9 text-left">
                @Html.Raw(Model.description)
            </div>
        </div>
    </div>
</div>
<div class="line"></div>
<div class="white-block">
    <div class="row">
        <div class="col-md-12 text-right">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <input type="submit" value="Подтвердить удаление" class="btn btn-grey-tta" disabled />
                </div>
            }
        </div>
    </div>
</div>